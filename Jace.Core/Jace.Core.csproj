<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Version>5.0.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Jace.NET is a high performance calculation engine for the .NET platform that can dynamically parse, interprete and execute strings containing mathematical functions. Jace.NET is available for the various .NET flavors: .NET, .NET Core, WinRT, Xamarin.Android and Xamarin.IOS.</Description>
    <Authors>Pieter De Rycke</Authors>
    <Product>Jace</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>math, interprete, parse, windows, phone, mathematical, formula, calculation, expression, evaluate</PackageTags>
    <PackageProjectUrl>https://github.com/pieterderycke/Jace</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;NETCORE</DefineConstants>
  </PropertyGroup>

</Project>
